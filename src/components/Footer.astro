---
import { site } from "../config/site.js";
const base = import.meta.env.BASE_URL;
const withBase = (p) => {
  const basePath = base.endsWith("/") ? base : `${base}/`;
  const rel = p.replace(/^\/+/, "");
  return `${basePath}${rel}`;
};
